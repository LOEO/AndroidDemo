<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/start"
        android:text="启动服务"
        />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/end"
            android:text="停止服务"
            />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/bind"
            android:text="绑定服务"
            />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/unbind"
            android:text="解绑服务"
            />
</LinearLayout>

