<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="ip" android:id="@+id/ip"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="端口" android:id="@+id/port"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="连接" android:id="@+id/connect"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="断开" android:id="@+id/close"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="未连接" android:id="@+id/status" android:textColor="#ff0000"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <EditText android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="消息" android:id="@+id/msg"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发送" android:id="@+id/send"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hello World, MyActivity"
                android:id="@+id/text"
                />
    </ScrollView>

</LinearLayout>

